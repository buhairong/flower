/* pages/post-detail/post-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  top: 230rpx;
  transform: translate(-50%, -50%);
}

.author-date {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.author-date image {
  width: 64rpx;
  height: 64rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.title {
  margin-top: 30rpx;
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #4b556c;
  letter-spacing: 2px;
}

.tool {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.circle {
  display: flex;
  width: 660rpx;
  justify-content: flex-end;
}

.circle image {
  width: 90rpx;
  height: 90rpx;
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  position: absolute;
  z-index: -1;
}

.detail {
  margin: 20rpx 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

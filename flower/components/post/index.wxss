/* components/post/index.wxss */

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  align-items: center;
}

.post-author-date image {
  width: 60rpx;
  height: 60rpx;
}

.post-author-date text {
  margin-left: 20rpx;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}

.post-content {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.post-like {
  display: flex;
  align-items: center;  
  margin-left: 20rpx;
}

.post-like l-icon {
  margin-right: 16rpx;
}

.post-like text {
  margin-right: 40rpx;
  font-size: 26rpx;
}